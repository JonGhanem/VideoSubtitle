<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UplodVideo"
    android:padding="20dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload_activity_title"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:id="@+id/textviewUploadvideo"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_video"
        android:layout_below="@+id/textviewUploadvideo"
        android:layout_centerHorizontal="true"
        android:onClick="uploadvideoo"
        android:id="@+id/btnuploadvideo"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:textSize="17sp"

        />

    <VideoView
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="200dp"
        android:id="@+id/videoview"
        android:layout_below="@id/btnuploadvideo"/>

    <Button
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoview"
        android:layout_centerHorizontal="true"
        android:onClick="firebaseUploading"
        android:text="@string/firebase_uploading"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:textSize="17sp"/>
    </RelativeLayout>